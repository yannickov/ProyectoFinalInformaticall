#include <iostream>
using namespace std; 
  
class nueva{
    public:
    string arr[99999];
    int cont=0;
    string* retornary(string texto){
        
        string word = ""; 
        for (auto x : texto){ 
            if (x == ' '){
                arr[cont]=word;
                cont=cont+1;
                word = ""; 
            } 
            else{ 
           word = word + x; 
            } 
        }  
    arr[cont]=word; 
    static tamagnoarr=cont;
    return(arr);
    }
    
};

